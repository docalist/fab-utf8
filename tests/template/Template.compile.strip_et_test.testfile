--test--
	tests imbriqués avec des variables
--file--
	<div test="$varFalse">
		<p test="$varFalse">
			<span test="$varFalse">
				content
			</span>
		</p>
	</div>
--expect--
	<?php if($_varFalse):?>
		<div>
			<?php if($_varFalse):?>
				<p>
					<?php if($_varFalse):?>
						<span>
							content
						</span>
					<?php endif;?>
				</p>
			<?php endif;?>
		</div>
	<?php endif;?>
================================================================================
--test--
	strips imbriqués avec des variables
--file--
	<div strip="$varFalse">
		<p strip="$varFalse">
			<span strip="$varFalse">
				content
			</span>
		</p>
	</div>
--expect--
	<?php if($_keeptag=!($_varFalse)):?><div><?php endif;?>
		<?php if($_keeptag2=!($_varFalse)):?><p><?php endif;?>
			<?php if($_keeptag3=!($_varFalse)):?><span><?php endif;?>
				content
			<?php if ($_keeptag3):?></span><?php endif;?>
		<?php if ($_keeptag2):?></p><?php endif;?>
	<?php if ($_keeptag):?></div><?php endif;?>
================================================================================
--test--
	tests et strips imbriqués avec des variables
--file--
	<div test="$varFalse" strip="$varFalse">
		<p test="$varFalse" strip="$varFalse">
			<span test="$varFalse" strip="$varFalse">
				content
			</span>
		</p>
	</div>
--expect--
	<?php if($_varFalse):?>
		<?php if($_keeptag=!($_varFalse)):?><div><?php endif;?>
			<?php if($_varFalse):?>
				<?php if($_keeptag2=!($_varFalse)):?><p><?php endif;?>
					<?php if($_varFalse):?>
						<?php if($_keeptag3=!($_varFalse)):?><span><?php endif;?>
							content
						<?php if ($_keeptag3):?></span><?php endif;?>
					<?php endif;?>
				<?php if ($_keeptag2):?></p><?php endif;?>
			<?php endif;?>
		<?php if ($_keeptag):?></div><?php endif;?>
	<?php endif;?>
