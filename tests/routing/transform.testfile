--test--
Une route simple avec une variable et un with
--file--
<config>
    <item>
        <url>/base/voir/$ref</url>
        <module>Base</module>
        <action>actionShow</action>
        <with>
            <ref>\d+(,\d+){0,4}</ref>
        </with>
    </item>
</config>
--expect--
array
(
    'urls' => array
    (
        'base' =>array
        (
            'voir' =>array
            (
                '$' => array
                (
                    '@route' =>array
                    (
                        'url' => '/base/voir/$ref',
                        'module' => 'Base',
                        'action' => 'actionShow',
                        'with' => array
                        (
                            'ref' => '~^\\d+(,\\d+){0,4}$~',
                        ),
                        'args' => array
                        (
                            'ref' => 0,
                        ),                        
                    ),
                ),
            ),
        ),
    ),
    'modules' => array
    (
        'base-show' => array
        (
            0 => array
            (
                'url' => '/base/voir/$ref',
                'module' => 'Base',
                'action' => 'actionShow',
                'with' => array
                (
                    'ref' => '~^\\d+(,\\d+){0,4}$~',
                ),
                'args' => array
                (
                    'ref' => 11,
                ),
            ),
        ),
    ),
)
