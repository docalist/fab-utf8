<config>
    <item>
        <url>/admin/config/$module/$action</url>
        <module>adminModule</module>
        <action>configure</action>
    </item>
</config>
--expect--
array
(
    'urls' => array
    (
        'admin' => array
        (
            'config' => array
            (
                '$' => array
                (
                    '$' => array
                    (
                        '@route' => array
                        (
                            'url' => '/admin/config/$module/$action',
                            'module' => 'adminModule',
                            'action' => 'configure',
                            'args' => array
                            (
                                'module' => 0,
                                'action' => 1,
                            ),
                        ),
                    ),
                ),
            ),
        ),
    ),
    'modules' => array
    (
        'adminmodule-configure' => array
        (
            0 => array
            (
                'url' => '/admin/config/$module/$action',
                'module' => 'adminModule',
                'action' => 'configure',
                'args' => array
                (
                    'action' => 22,
                    'module' => 14,
                ),
            ),
        ),
    ),
)
