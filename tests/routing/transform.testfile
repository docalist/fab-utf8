--test--
Une route comportant un <add> et deux fois la même variable
--file--
<config>
    <item>
        <url>/articles/tag/$motcle-$motcle</url>
        <module>database</module>
        <action>actionSearch</action>
        <add>
            <op>AND_NOT</op>
        </add>
    </item>
</config>
--expect--
array
(
    'urls' => array
    (
        'articles' => array
        (
            'tag' => array
            (
                '$' => array
                (
                    '-' => array
                    (
                        '$' => array
                        (
                            '@route' => array
                            (
                                'url' => '/articles/tag/$motcle-$motcle',
                                'module' => 'database',
                                'action' => 'actionSearch',
                                'add' => array
                                (
                                    'op' => 'AND_NOT',
                                ),
                                'args' => array
                                (
                                    'motcle' => array
                                    (
                                        0 => 0,
                                        1 => 1,
                                    ),
                                ),
                            ),
                        ),
                    ),
                ),
            ),
        ),
    ),
    'modules' => array
    (
        'database-search' => array
        (
            0 => array
            (
                'url' => '/articles/tag/$motcle-$motcle',
                'module' => 'database',
                'action' => 'actionSearch',
                'add' => array
                (
                    'op' => 'AND_NOT',
                ),
                'args' => array
                (
                    'motcle' => array
                    (
                        0 => 22,
                        1 => 14,
                    ),
                ),
            ),
        ),
    ),
)
